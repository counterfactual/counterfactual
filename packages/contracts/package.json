{
  "name": "@counterfactual/contracts",
  "version": "0.0.3",
  "description": "Smart contracts for Counterfactual",
  "license": "MIT",
  "files": [
    "build",
    "contracts",
    "networks"
  ],
  "scripts": {
    "build": "truffle compile --all",
    "migrate": "truffle migrate --reset",
    "test": "tsc -b && yarn ganache:start && yarn truffle:test && yarn ganache:stop",
    "ganache:start": "ganache-cli -q -i 7777777 -l 0xfffffffffff -g 0x01 > /dev/null &",
    "ganache:stop": "ps aux | grep ganache-cli | grep -v grep | awk '{print $2}' | xargs kill -9",
    "lint:fix": "yarn lint:ts:fix && yarn lint:sol:fix",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:sol": "solium -d .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint:ts": "tslint -c tslint.json -p .",
    "test:coverage": "solidity-coverage",
    "truffle:test": "truffle test --network ganache"
  },
  "keywords": [
    "ethereum",
    "counterfactual",
    "state channels",
    "solidity"
  ],
  "devDependencies": {
    "@counterfactual/types": "0.0.1",
    "@counterfactual/typescript-typings": "0.0.1",
    "@types/chai": "^4.1.7",
    "@types/node": "^10.9.3",
    "chai": "^4.2.0",
    "dotenv": "^6.1.0",
    "eth-gas-reporter": "0.1.12",
    "ethereum-waffle": "1.0.5",
    "ethers": "4.0.20",
    "ganache-cli": "6.2.4",
    "openzeppelin-eth": "^2.0.2",
    "shx": "^0.3.2",
    "solc": "^0.4.25",
    "solidity-coverage": "0.5.11",
    "solium": "1.1.8",
    "truffle": "5.0.0-beta.1",
    "truffle-deploy-registry": "^0.4.1",
    "truffle-hdwallet-provider": "1.0.0-web3one.0",
    "ts-node": "^7.0.0",
    "tslint": "5.11.0",
    "typescript": "^3.1.2",
    "zos-lib": "^2.0.0"
  }
}
