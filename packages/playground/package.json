{
  "name": "@counterfactual/playground",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .rpt2_cache jest-cache build dist",
    "build": "yarn clean && mkdir dist/ && node build.js && webpack",
    "start": "nodemon --watch src/components -e *.html,*.css --exec 'yarn build && webpack-dev-server --no-inline'",
    "serve": "webpack-dev-server --no-inline &",
    "test": "yarn serve && jest --runInBand --detectOpenHandles --bail",
    "test-debug": "node --inspect-brk jest --runInBand",
    "lint:fix": "tslint -c tslint.json -p . --fix",
    "lint": "tslint -c tslint.json -p ."
  },
  "devDependencies": {
    "@types/expect-puppeteer": "^3.3.0",
    "@types/jest-environment-puppeteer": "^2.2.1",
    "@types/puppeteer": "^1.10.0",
    "concat": "^1.0.3",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-puppeteer": "^3.5.0",
    "nodemon": "^1.18.6",
    "puppeteer": "^1.10.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "verbose": false,
    "bail": true,
    "rootDir": ".",
    "cacheDirectory": "jest-cache",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.spec.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "roots": [
      "test"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testURL": "http://localhost/"
  }
}
